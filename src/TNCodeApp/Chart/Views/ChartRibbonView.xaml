<UserControl 
    x:Class="TNCodeApp.Chart.Views.ChartRibbonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adapter="clr-namespace:TNCodeApp.Ribbon"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Ribbon
         x:Name="MainRibbon"
         x:FieldModifier="protected internal">

        <RibbonTab
            Header="Home">

            <RibbonGroup
                Header="Charts"
                adapter:UIElementExtension.MergeOrder="5">

                <RibbonButton
                    AutomationProperties.AutomationId="RbBtnPointChart"
                    Label="Scatter"
                    Command="{Binding ChartCommand}"
                    CommandParameter="scatter">
                </RibbonButton>

                <RibbonButton
                    AutomationProperties.AutomationId="RbBtnLineChart"
                    Label="Line"
                    Command="{Binding ChartCommand}"
                    CommandParameter="line">
                </RibbonButton>

            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
</UserControl>
