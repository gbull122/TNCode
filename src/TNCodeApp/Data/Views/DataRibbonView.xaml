<UserControl
    x:Class="TNCodeApp.Data.Views.DataRibbonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TNCodeApp.Data.Views"
    xmlns:adapter="clr-namespace:TNCodeApp.Ribbon"
    xmlns:Fluent="urn:fluent-ribbon">

    <Fluent:Ribbon
         x:Name="MainRibbon"
         x:FieldModifier="protected internal">

        <Fluent:RibbonTabItem
            Header="Home">

            <Fluent:RibbonGroupBox
                Header="Data">
                
                <Fluent:Button
                    AutomationProperties.AutomationId="RbBtnLoadData"
                    Header="Load Data"
                    Command="{Binding LoadCommand}">
                </Fluent:Button>

                <Fluent:Button
                    AutomationProperties.AutomationId="RbBtnTestData"
                    Header="Test Data"
                    Command="{Binding DataCommand}"
                    CommandParameter="Mpg">
                </Fluent:Button>

            </Fluent:RibbonGroupBox>
        </Fluent:RibbonTabItem>
    </Fluent:Ribbon>
</UserControl>

